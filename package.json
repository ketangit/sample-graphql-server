{
    "name": "sample-graphql-server",
    "version": "1.0.0",
    "description": "Sample node applicaiton using GraphQL and Vesper framework",
    "main": "index.js",
    "private": true,
    "scripts": {
        "build": "npm run build-ts && npm run tslint && npm run copy-schema",
        "build-ts": "tsc",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "copy-schema": "copyfiles -u 1 src/schema/**/*.graphql dist",
        "start": "node dist/index.js"
    },
    "engines": {
        "node": "8.11.2",
        "npm": "5.6.0"
    },
    "devDependencies": {
        "@types/graphql-iso-date": "^3.3.0",
        "@types/node": "^8.10.25",
        "@types/ws": "^5.1.2",
        "@types/faker": "^4.1.3",
        "copyfiles": "^2.0.0",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.14.0",
        "typescript": "^3.0.1"
    },
    "dependencies": {
        "faker": "^4.1.0",
        "graphql-iso-date": "^3.5.0",
        "reflect-metadata": "^0.1.10",
        "sqlite3": "^3.1.10",
        "typeorm": "0.2.7",
        "vesper": "^0.1.9"
    }
}